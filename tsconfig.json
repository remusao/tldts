{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "types": ["node", "jest"],
    "target": "ES3",
    "module": "ES6",
    "outDir": "build",
    "lib": ["ES6"],
    "moduleResolution": "Node",
    "removeComments": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "files": [
    "./tldts.ts",
    "./tldts-experimental.ts"
  ]
}
